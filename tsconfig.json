{
  "include": ["./src"],
  "exclude": ["./node_modules", "./dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "typeRoots": ["./src/@types"],
    "baseUrl": "./",
    "paths": {
      "@libs/common": ["./src/libs/common"],
      "@libs/http": ["./src/libs/http"],
      "@libs/jwt": ["./src/libs/jwt/index"],
      "@libs/tables": ["./src/libs/tables"]
    },
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
